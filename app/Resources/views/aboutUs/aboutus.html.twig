                anchors: ['{{'_AU_ANCHOR_LINK_1_' | trans}}', '{{'_AU_ANCHOR_LINK_2_' | trans}}', '{{'_AU_ANCHOR_LINK_3_' | trans}}', '{{'_AU_ANCHOR_LINK_4_' | trans}}', '{{'_AU_ANCHOR_LINK_5_' | trans}}', '{{'_AU_ANCHOR_LINK_6_' | trans}}', '{{'_AU_ANCHOR_LINK_7_' | trans}}'],
                paddingBottom: '60px',
                fixedElements: '#header,.service-navigation-foooter-desktop,.service-navigation-footer-mobile',
                scrollOverflow: true,
                navigation: true,
		navigationPosition: 'right',
                controlArrows: false,
                afterSlideLoad: function (anchorLink, index, slideAnchor, slideIndex) {
                    
                },
                afterLoad: function (anchorLink, index) {

                    if (index === $('#fullpage .section').length) {
                        $('.goUp').show();
                        $('.goDeeper,.downArrowNavigation').hide();
                    }else{
                        $('.downArrowNavigation').show();
                    }

                    if (index == 1) {
                        $('.goUp,.upArrowNavigation').hide();
                        $('.goDeeper').show(); 
                    }else{
                        $('.upArrowNavigation').show();
                    }
                    
                    switch (index)
                    {
                        case 1:
                            whitePagination();
                        break;
                        case 2:
                            darkPagination();
                        break;
                        case 3:
                            whitePagination();
                        break;
                        case 4:
                            darkPagination();
                        break;
                        case 5:
                            whitePagination();
                            break;
                        case 6:
                            whitePagination();
                            break;
                        case 7:
                            darkPagination();
                            break;
                    }
                      
                }
                
            });
            
            
            $("#fp-nav").prepend("<span class='upArrowNavigation'></span>");
            $("#fp-nav").append("<span class='downArrowNavigation'></span>");


            $('.upArrowNavigation').click(function () {
                $.fn.fullpage.moveSectionUp();
            });

            $('.goDeeper,.downArrowNavigation').click(function () {
                $.fn.fullpage.moveSectionDown();
            });
            
        });
        
        function darkPagination() {
             $('#fp-nav ul li a span').css('background-color','rgba(60, 60, 61, 0.3) !important').css('transition','background-color 0.5s');
             $('#fp-nav ul li a.active span').css('background-color','rgba(60, 60, 61, 0.7) !important').css('transition','background-color 0.5s');
        }
        
        function whitePagination() {
            $('#fp-nav ul li a span').css('background-color','rgba(249, 249, 249, 0.3) !important').css('transition','background-color 0.5s');
            $('#fp-nav ul li a.active span').css('background-color','rgba(249, 249, 249, 0.7) !important').css('transition','background-color 0.5s');
        }

    </script>
    
